{
  "include": ["app", "components", "types"],
  "compilerOptions": {
    "target": "es2017",
    "module": "es2015",
    "moduleResolution": "node",
    "lib": ["dom", "es2017"],
    "jsx": "react",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "noEmitOnError": true,
    "baseUrl": ".",
    "paths": {
      "@app/*": ["./app/*"],
      "@components": ["./components"],
      "@types/*": ["./types/*"],
      "@assets/*": ["./assets/*"]
    }
  }
}
